{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx", 
    "baseUrl": ".",
    "types": ["chrome"],
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@composables/*": ["composables/*"],
      "@entrypoints/*": ["entrypoints/*"],
      "@hooks/*": ["hooks/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
