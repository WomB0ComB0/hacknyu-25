{
  "name": "spend-wisely",
  "displayName": "Spend Wisely",
  "version": "1.0.0",
  "description": "A Chrome extension that provides personalized spending insights during online shopping, suggests optimal Capital One cards for maximizing cashback rewards, and finds available coupons/savings using transaction data and rewards APIs.",
  "author": "Mike Odnis <mikeodnis3242004@gmail.com>",
  "license": "EPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/WomB0ComB0/hacknyu-25"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --source-maps --bundle-buddy",
    "package": "plasmo package",
    "lint": "bunx biome check --write ./ || true",
    "lint:knip": "knip",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
    "lint:packages": "pnpm dedupe --check",
    "lint:spelling": "cspell \"**\" \".github/**/*\"",
    "prepare": "husky",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
